<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainimage">
    <TextView
        android:id="@+id/일일퀘스트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일일퀘스트"
        android:layout_marginTop="40dp"
        android:textColor="@color/purple_200"
        android:fontFamily="@font/jalnan"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/소멸의여로이미지"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vanishing_journey"
        android:layout_below="@id/일일퀘스트"
        />
    <TextView
        android:id="@+id/소멸의여로텍스트"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="소멸의 여로"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:layout_below="@id/소멸의여로이미지"
        android:layout_marginLeft="30dp"
        />

</RelativeLayout>

<!--리니어와달리 레이아웃을 중첩하지않아 코드가독성은 조금 좋아졌으나-->
<!--다른 화면들과 마찬가지로 위치를 거의(마진)직접 잡아줘야해서 불편-->