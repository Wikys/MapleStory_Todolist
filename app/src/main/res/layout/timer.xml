<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/타이틀"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재획 타이머"
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/재획비"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        />




    <ImageView
        android:id="@+id/재획비"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/wealth_acquisition_potion"
        app:layout_constraintTop_toBottomOf="@id/타이틀"
        app:layout_constraintBottom_toTopOf="@id/타이머"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />
    <ProgressBar
        android:id="@+id/타이머"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="7200"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/재획비"
        app:layout_constraintBottom_toTopOf="@id/타이머토글"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <ToggleButton
        android:id="@+id/타이머토글"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="재획 시작"
        android:textOn="재획 중지"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/타이머"
        app:layout_constraintBottom_toTopOf="@id/버프"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />


<TableLayout
    android:id="@+id/버프"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:weightSum="6"

    >
    <TableRow>
    <ImageView
        android:id="@+id/정펜"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/exp_pendent"
        android:layout_weight="1"


         />

<!--        <CheckBox-->
<!--            android:id="@+id/checkBox"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            -->
<!--            />-->

    <ImageView
        android:id="@+id/경축비"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/exp_postion"
        android:layout_weight="1"
         />

    <ImageView
        android:id="@+id/경뿌"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/exp_rate"
        android:layout_weight="1"

        />
    </TableRow>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
    />
    <TableRow>

    <ImageView
        android:id="@+id/경쿠"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/exp_rate_two"
        android:layout_weight="1"
         />

    <ImageView
        android:id="@+id/홀심"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/holy_symbol"
        android:layout_weight="1"
         />
    </TableRow>
</TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>