<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mainimage">

    <TextView
        android:id="@+id/제목"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jalnan"
        android:text="메인 메뉴"
        android:textColor="#FC86D1"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
<!--    타이틀부분 만들때는 딱히 레이아웃간 장단점을 느낄수없었음 굳이 따지면 리니어가 제일 직관적 (가운대정렬만하고 마진만 맞춰주면-->
<!--    상대위치지정이 딱히 필요하진않으니까)-->
    <Button
        android:id="@+id/일일퀘스트버튼"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/roundbutton"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/제목"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/일일보스버튼"
        app:layout_constraintBottom_toTopOf="@id/주간퀘스트버튼"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="spread"
        />

    <ImageView
        android:id="@+id/일퀘이미지"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:src="@drawable/dq"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/일일퀘스트버튼"
        app:layout_constraintRight_toRightOf="@id/일일퀘스트버튼"
        app:layout_constraintTop_toTopOf="@id/일일퀘스트버튼"
        app:layout_constraintBottom_toTopOf="@id/일퀘텍스트"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="2"
        />
    <TextView
        android:id="@+id/일퀘텍스트"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="일일 퀘스트"
        android:textSize="20dp"
        android:fontFamily="@font/jalnan"
        app:layout_constraintTop_toBottomOf="@id/일퀘이미지"
        app:layout_constraintLeft_toLeftOf="@id/일일퀘스트버튼"
        app:layout_constraintRight_toRightOf="@id/일일퀘스트버튼"
        app:layout_constraintBottom_toBottomOf="@id/일일퀘스트버튼"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        />

    <Button
        android:id="@+id/일일보스버튼"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/roundbutton"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/제목"
        app:layout_constraintLeft_toRightOf="@id/일일퀘스트버튼"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/주간보스버튼"
        app:layout_constraintVertical_chainStyle="spread"

        />

    <ImageView
        android:id="@+id/일일보스이미지"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:src="@drawable/vonvon"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/일일보스버튼"
        app:layout_constraintRight_toRightOf="@id/일일보스버튼"
        app:layout_constraintTop_toTopOf="@id/일일보스버튼"
        app:layout_constraintBottom_toTopOf="@id/일일보스텍스트"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="2"
        />
    <TextView
        android:id="@+id/일일보스텍스트"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="일일 보스"
        android:textSize="20dp"
        android:fontFamily="@font/jalnan"
        app:layout_constraintTop_toBottomOf="@id/일일보스이미지"
        app:layout_constraintLeft_toLeftOf="@id/일일보스버튼"
        app:layout_constraintRight_toRightOf="@id/일일보스버튼"
        app:layout_constraintBottom_toBottomOf="@id/일일보스버튼"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        />

    <Button
        android:id="@+id/주간퀘스트버튼"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/roundbutton"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/주간보스버튼"
        app:layout_constraintTop_toBottomOf="@id/일일퀘스트버튼"
        app:layout_constraintBottom_toTopOf="@id/재획타이머버튼"

        />
    <ImageView
        android:id="@+id/주간퀘스트이미지"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:src="@drawable/wq"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/주간퀘스트버튼"
        app:layout_constraintRight_toRightOf="@id/주간퀘스트버튼"
        app:layout_constraintTop_toTopOf="@id/주간퀘스트버튼"
        app:layout_constraintBottom_toTopOf="@id/주간퀘스트텍스트"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="2"
        />
    <TextView
        android:id="@+id/주간퀘스트텍스트"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="주간 퀘스트"
        android:textSize="20dp"
        android:fontFamily="@font/jalnan"
        app:layout_constraintTop_toBottomOf="@id/주간퀘스트이미지"
        app:layout_constraintLeft_toLeftOf="@id/주간퀘스트버튼"
        app:layout_constraintRight_toRightOf="@id/주간퀘스트버튼"
        app:layout_constraintBottom_toBottomOf="@id/주간퀘스트버튼"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        />

    <Button
        android:id="@+id/주간보스버튼"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/roundbutton"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/일일보스버튼"
        app:layout_constraintLeft_toRightOf="@id/주간퀘스트버튼"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/일정표버튼"
        />
    <ImageView
        android:id="@+id/주간보스이미지"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:src="@drawable/balck_mage"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/주간보스버튼"
        app:layout_constraintRight_toRightOf="@id/주간보스버튼"
        app:layout_constraintTop_toTopOf="@id/주간보스버튼"
        app:layout_constraintBottom_toTopOf="@id/주간보스텍스트"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="2"
        />
    <TextView
        android:id="@+id/주간보스텍스트"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="주간 보스"
      android:textSize="20dp"
        android:fontFamily="@font/jalnan"
        app:layout_constraintTop_toBottomOf="@id/주간보스이미지"
        app:layout_constraintLeft_toLeftOf="@id/주간보스버튼"
        app:layout_constraintRight_toRightOf="@id/주간보스버튼"
        app:layout_constraintBottom_toBottomOf="@id/주간보스버튼"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        />
    <Button
        android:id="@+id/재획타이머버튼"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/roundbutton"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/주간퀘스트버튼"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/일정표버튼"
        />

    <ImageView
        android:id="@+id/재획타이머이미지"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:src="@drawable/wealth_acquisition_potion"
        app:layout_constraintLeft_toLeftOf="@id/재획타이머버튼"
        app:layout_constraintRight_toRightOf="@id/재획타이머버튼"
        app:layout_constraintTop_toTopOf="@id/재획타이머버튼"
        app:layout_constraintBottom_toTopOf="@id/재획타이머텍스트"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="2"
        />

    <TextView
        android:id="@+id/재획타이머텍스트"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="재획 타이머"
        android:textSize="20dp"
        android:fontFamily="@font/jalnan"
        app:layout_constraintTop_toBottomOf="@id/재획타이머이미지"
        app:layout_constraintLeft_toLeftOf="@id/재획타이머버튼"
        app:layout_constraintRight_toRightOf="@id/재획타이머버튼"
        app:layout_constraintBottom_toBottomOf="@id/재획타이머버튼"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        />
    <Button
        android:id="@+id/일정표버튼"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/roundbutton"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/주간보스버튼"
        app:layout_constraintLeft_toRightOf="@id/재획타이머버튼"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<!--레이아웃 중첩없이(랠러티브의 장점) 버튼을 겹쳐서 구성하고 -->
<!--(버튼내부)가중치를 이용한 비율정렬기능(리니어 가중치)속성을 동시에 사용해서 구성할수있는 장점이 있었음-->
<!--(버튼외부)세로체인 가로체인을통한 정렬 직접 사이즈 고민을 하지않고 상대적으로 정렬이 가능함-->