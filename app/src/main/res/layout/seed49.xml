<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"


        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/roundbtnwhite"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:text="시드 층"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="23"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="24"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="36"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="39"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="47"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="48"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="49"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/jalnan"
            android:textSize="29dp"
            android:text="시드 49층"
            android:gravity="center"
            android:background="@drawable/roundbutton"
            />
        <androidx.appcompat.widget.SearchView

            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            app:queryHint="몬스터 또는 마을 검색(예: 주황버섯)"
            app:iconifiedByDefault="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/roundbutton"
            android:layout_margin="2dp"
            >

            <ImageView
                android:id="@+id/에델슈타인바탕"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/에델슈타인바탕"
                android:layout_alignTop="@id/에델슈타인바탕"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbtnviolet"
                android:padding="4dp"
                android:text="에델슈타인"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/에델슈타인바탕"
                android:layout_alignBottom="@id/에델슈타인바탕"
                android:layout_centerHorizontal="true"
                android:src="@drawable/garodung" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/에델슈타인바탕"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="가로등"
                />



        </RelativeLayout>

        </LinearLayout>






    </LinearLayout>


</LinearLayout>
