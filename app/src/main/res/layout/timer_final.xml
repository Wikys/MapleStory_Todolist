<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mainimage">
    <TextView
        android:id="@+id/타이틀"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="재획 타이머"
        android:textColor="#FC86D1"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/재획비"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ImageView
        android:id="@+id/재획비"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/wealth_acquisition_potion"
        app:layout_constraintBottom_toTopOf="@id/타이머"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/타이틀"

        />

    <ProgressBar
        android:id="@+id/타이머"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:progress="7200"
        app:layout_constraintBottom_toTopOf="@id/타이머토글"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/재획비" />

    <ToggleButton
        android:id="@+id/타이머토글"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="재획 시작"
        android:textOn="재획 중지"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/타이머"
        app:layout_constraintBottom_toTopOf="@id/아이콘그룹1"/>

    <View
        android:id="@+id/아이콘그룹1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/타이머토글"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/아이콘그룹2"
        />
    <ImageView
        android:id="@+id/정펜"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_pendent"
        app:layout_constraintLeft_toLeftOf="@id/아이콘그룹1"
        app:layout_constraintRight_toLeftOf="@id/경축비"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹1"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹1"
        />
    <ImageView
        android:id="@+id/경축비"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_postion"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹1"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹1"
        app:layout_constraintLeft_toRightOf="@id/정펜"
        app:layout_constraintRight_toLeftOf="@id/경뿌"
        />
    <ImageView
        android:id="@+id/경뿌"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_rate"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹1"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/경축비"
        />

    <View
        android:id="@+id/아이콘그룹2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/아이콘그룹1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/경쿠"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_rate_two"
        app:layout_constraintLeft_toLeftOf="@id/아이콘그룹2"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹2"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹2"
        app:layout_constraintRight_toLeftOf="@id/홀심"
        />
    <ImageView
        android:id="@+id/홀심"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/holy_symbol"
        app:layout_constraintLeft_toRightOf="@id/경쿠"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹2"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹2"
        app:layout_constraintRight_toRightOf="@id/아이콘그룹2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>



<!--리니어 테이블 컨스트중 컨스트사용-->

<!--세로배치부분 설명-->

<!--리니어 사용시 오리엔테이션 속성을 버티컬로 맞추고 마진으로 간격을 두는방법이 있었는데요-->
<!--이 방법을 사용하면 상당히 코드가 간결해지기는 하지만 뷰 사이의 간격을 자로 잰것처럼 맞추고싶어서-->
<!--사용하지않았구요-->

<!--테이블의 경우에는 리니어와 동일한 단점을 포함해서 세로배치시 위드조절이 안된다는 문제가 있었는데요-->
<!--이걸 해결하려면 테이블로우를 추가해 열을 이동시키는것으로 해결해야했는데-->
<!--저는 이 과정이 매우 햇갈렸고 처음부터 완벽하게 설계하고 만든화면이 아니다보니-->
<!--맨아래쪽 아이콘 모여있는 부분을 만들다가 열이 늘어나면서 화면이 망가져버리는 상황이 생겼습니다-->

<!--따라서 컨스트레인트 레이아웃을 사용하여-->
<!--세로배치돼있는 뷰들을 체인으로 묶어 정확한 간격으로 나열하고-->
<!--아이콘집합 부분도 가로로 묶어서 정확한 간격으로 배치하였습니다-->





