<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/roundbtnwhite"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:text="시드 층"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="23"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="24"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="36"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="39"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="47"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbtnviolet"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="48"
            android:layout_marginBottom="5dp"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="49"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/jalnan"
            android:textSize="29dp"
            android:text="시드 49층"
            android:gravity="center"
            android:background="@drawable/roundbutton"
            />
        <androidx.appcompat.widget.SearchView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            app:queryHint="몬스터 또는 마을 검색(예: 주황버섯)"
            app:iconifiedByDefault="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/roundbutton"
            android:layout_margin="2dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/에델슈타인바탕"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_gray"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundbtnviolet"
                    android:padding="4dp"
                    android:text="에델슈타인"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/garodung"
                    android:layout_gravity="center">
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="가로등"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<!--겹치는 화면은 레이아웃안에 레이아웃을 넣는식으로 구현을 했지만
살짝 걸쳐져있는부분은 랠러티브나 컨스트,프레임이 아닌이상 해결이 안된다고 판단했음(에델슈타인부분)-->
<!--레이아웃이 너무많아져 가독성이 매우 안좋아짐 (랠러티브나 컨스트같은경우엔 상대적인 위치지정으로
뷰를 순서대로 쌓는식으로 가독성을 좋게 표현할수가있는데 리니어의 경우 너무 제한적임(-->