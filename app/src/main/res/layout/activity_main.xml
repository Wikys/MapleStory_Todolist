<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/mainimage"

    >

    <TextView
        android:id="@+id/제목"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jalnan"
        android:text="메할일 체크리스트"
        android:textColor="#FC86D1"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/로그인"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_below="@+id/제목"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bordertext"
        android:fontFamily="@font/jalnan"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="LOGIN"
        android:textColor="#FC86D1"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/로그인2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/로그인"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:weightSum="6">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint="아이디" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint="비밀번호"

            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="확인" />
    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/로그인2"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo" />
</RelativeLayout>
